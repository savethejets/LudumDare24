<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ludumdare24" default="compile.module.ludumdare24">
  <dirname property="module.ludumdare24.basedir" file="${ant.file.module_ludumdare24}"/>
  
  <property name="module.jdk.home.ludumdare24" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ludumdare24" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ludumdare24" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ludumdare24" value="${compiler.args}"/>
  
  <property name="ludumdare24.output.dir" value="${module.ludumdare24.basedir}/out/production/LudumDare24"/>
  <property name="ludumdare24.testoutput.dir" value="${module.ludumdare24.basedir}/out/test/LudumDare24"/>
  
  <path id="ludumdare24.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ludumdare24.module.production.classpath">
    <path refid="${module.jdk.classpath.ludumdare24}"/>
    <pathelement location="${basedir}/../../Libraries/Java/libgdx-0.9.6/gdx.jar"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  <path id="ludumdare24.runtime.production.module.classpath">
    <pathelement location="${ludumdare24.output.dir}"/>
    <pathelement location="${basedir}/../../Libraries/Java/libgdx-0.9.6/gdx.jar"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  <path id="ludumdare24.module.classpath">
    <path refid="${module.jdk.classpath.ludumdare24}"/>
    <pathelement location="${ludumdare24.output.dir}"/>
    <pathelement location="${basedir}/../../Libraries/Java/libgdx-0.9.6/gdx.jar"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  <path id="ludumdare24.runtime.module.classpath">
    <pathelement location="${ludumdare24.testoutput.dir}"/>
    <pathelement location="${ludumdare24.output.dir}"/>
    <pathelement location="${basedir}/../../Libraries/Java/libgdx-0.9.6/gdx.jar"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.ludumdare24">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ludumdare24">
    <patternset refid="excluded.from.module.ludumdare24"/>
  </patternset>
  
  <path id="ludumdare24.module.sourcepath">
    <dirset dir="${module.ludumdare24.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="ludumdare24.module.test.sourcepath">
    <dirset dir="${module.ludumdare24.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ludumdare24" depends="compile.module.ludumdare24.production,compile.module.ludumdare24.tests" description="Compile module LudumDare24"/>
  
  <target name="compile.module.ludumdare24.production" depends="register.custom.compilers" description="Compile module LudumDare24; production classes">
    <mkdir dir="${ludumdare24.output.dir}"/>
    <javac2 destdir="${ludumdare24.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ludumdare24}/javac">
      <compilerarg line="${compiler.args.ludumdare24}"/>
      <bootclasspath refid="ludumdare24.module.bootclasspath"/>
      <classpath refid="ludumdare24.module.production.classpath"/>
      <src refid="ludumdare24.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ludumdare24"/>
    </javac2>
    
    <copy todir="${ludumdare24.output.dir}">
      <fileset dir="${module.ludumdare24.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ludumdare24.tests" depends="register.custom.compilers,compile.module.ludumdare24.production" description="compile module LudumDare24; test classes" unless="skip.tests">
    <mkdir dir="${ludumdare24.testoutput.dir}"/>
    <javac2 destdir="${ludumdare24.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ludumdare24}/javac">
      <compilerarg line="${compiler.args.ludumdare24}"/>
      <bootclasspath refid="ludumdare24.module.bootclasspath"/>
      <classpath refid="ludumdare24.module.classpath"/>
      <src refid="ludumdare24.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.ludumdare24"/>
    </javac2>
    
    <copy todir="${ludumdare24.testoutput.dir}">
      <fileset dir="${module.ludumdare24.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.ludumdare24" description="cleanup module">
    <delete dir="${ludumdare24.output.dir}"/>
    <delete dir="${ludumdare24.testoutput.dir}"/>
  </target>
</project>